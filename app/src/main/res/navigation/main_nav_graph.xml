<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/foodListFragment">
    <fragment
        android:id="@+id/foodListFragment"
        android:name="com.aeryz.foodgoapps.presentation.homefragment.FoodListFragment"
        tools:layout="@layout/fragment_food_list"
        android:label="FoodListFragment" >
        <action
            android:id="@+id/navigateToDetailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.aeryz.foodgoapps.presentation.detailfragment.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="food"
            app:argType="com.aeryz.foodgoapps.model.Food"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>